@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/css/bootstrap")
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


<div class="container">

    <div class="jumbotron" style="margin-top: 15px; background-image: url('../images/bg-02.jpg')">
        <h2 class="text-center" style="color:lightgray">Witaj w PandaCAR!</h2>
        <h3 class="text-center" style="color:lightgray">U nas znajdziesz auto na każdą okazje</h3>
        <br />
        <div id="mycarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                <li data-target="#mycarousel" data-slide-to="1"></li>
                <li data-target="#mycarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/mustang.jpg" alt="Ford Mustang" class="img-thumbnail">
                    <div class="carousel-caption">
                        <h4>FORD Mustang GT</h4>
                        <h5>Wolnossące 5.0 V8</h5><br>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/audia3.jpg" alt="Audi A3" class="img-thumbnail">
                    <div class="carousel-caption">
                        <h4>Audi A3 Sportback</h4>
                        <h5>Zwinne auto do miasta</h5><br>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/bmwx5.jpg" alt="BMW X5" class="img-thumbnail">
                    <div class="carousel-caption">
                        <h4>BMW X5</h4>
                        <h5>Luksusowa podróż po bezdrożach</h5><br>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br />
        <div class="text-center" style="color:lightgray">
            <h4 color="black">SPRAWDŹ NASZĄ OFERTĘ JUŻ TERAZ!</h4>
            @Html.ActionLink("KLIKNIJ!", "Show", "Car", null, new { @class = "btn btn-default btn-large", role = "button" })
        </div>

    </div>
</div>
