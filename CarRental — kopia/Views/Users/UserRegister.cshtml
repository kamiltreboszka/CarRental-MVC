@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>LOGOWANIE UŻYTKOWNIKA</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('../images/register.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50 col-lg-4">
                <span class="login100-form-title p-b-41">
                    Rejestracja
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5" method="post" action="@Url.Action("UserRegister")">
                    <div class="wrap-input100 validate-input" data-validate="Email is required">
                        <input class="input100" type="text" name="Name" placeholder="Imie">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Email is required">
                        <input class="input100" type="text" name="Surname" placeholder="Nazwisko">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="Password" placeholder="Hasło">
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Email is required">
                        <input class="input100" type="text" name="Email" placeholder="Email">
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="text" name="Pesel" placeholder="Pesel">
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="text" name="PhoneNumber" placeholder="Numer telefonu">
                        <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                    </div>

                    <div class="container-login100-form-btn p-t-32">
                        <button type="submit" class="login100-form-btn">Rejestruj</button>
                    </div>

                </form>
                <div class="container-login100-form-btn p-t-32">
                    <button type="submit" class="login100-form-btn" onclick="redirectOnClick()">Zaloguj jako użytkownik</button>
                    <script>
                        function redirectOnClick() {
                            document.location = '/Login/LoginForm';
                        }
                    </script>
                </div>
            </div>
            <div class="col-lg-2"></div>
            <div class="login100-form col-lg-2" id="change">
                @if (Session["AddUser"] != null)
                {
                    @model CarRental.Models.Users


                    <h2 class="text-center">Nowe konto</h2><hr>
                    <div>
                        <h4 class="text-center">Dane utworzonego konta: </h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Surname)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Surname)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Password)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Password)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Pesel)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Pesel)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </dd>

                        </dl>
                    </div>
                }
                @(Session["AddUser"] = null)
            </div>
        </div>
    </div>

    @if (Session["Fail"] != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert('@Session["Fail"].ToString()');
            };
        </script>
        Session["Fail"] = null;
    }

</body>
</html>


